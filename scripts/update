#!/bin/bash

set -e

if [[ "${CI}" ]]; then
    set -x
fi

function usage() {
    if [[ "${1}" ]]; then
        echo "${1}"
    fi

    echo -n \
        "Usage: $(basename "$0") [OPTIONS]
Builds project docker images

Options:
    --deploy
        Only build the deploy image
    --servers
        Only build the pctasks-sever image
    --servers
        Only build all the servers images (e.g functions, local-executor)
    --dev
        Only build the dev image
    --no-aux-servers
        Don't build non-essential devevelopment environment servers
    --task
        Only build the task images (including pctasks-run)
    --for-cluster
        Only build images that will be pushed to local registry for cluster
    --frontend
        Only update the frontend dev container
"
}

BUILD_DEPLOY=1
BUILD_SERVERS="-f docker-compose.yml"
BUILD_DEV="-f docker-compose.console.yml"
BUILD_TASK="-f docker-compose.tasks.yml"
BUILD_AUX_SERVERS="-f docker-compose.aux.yml"
BUILD_ONLY=""
BUILD_FRONTEND=1
while [[ $# -gt 0 ]]; do case $1 in
    --deploy)
        DEPLOY_ONLY=1
        BUILD_SERVERS=""
        BUILD_DEV=""
        BUILD_TASK=""
        BUILD_FRONTEND=""
        BUILD_AUX_SERVERS=""
        shift
        ;;
    --server)
        BUILD_DEPLOY=""
        BUILD_DEV=""
        BUILD_TASK=""
        BUILD_ONLY="server"
        BUILD_FRONTEND=""
        BUILD_AUX_SERVERS=""
        shift
        ;;
    --servers)
        BUILD_DEPLOY=""
        BUILD_DEV=""
        BUILD_TASK=""
        BUILD_AUX_SERVERS=""
        shift
        ;;
    --dev)
        BUILD_SERVERS=""
        BUILD_DEPLOY=""
        BUILD_TASK=""
        BUILD_AUX_SERVERS=""
        shift
        ;;
    --no-aux-servers)
        BUILD_AUX_SERVERS=""
        BUILD_FRONTEND=""
        shift
        ;;
    --task)
        BUILD_SERVERS=""
        BUILD_DEV=""
        BUILD_DEPLOY=""
        BUILD_FRONTEND=""
        BUILD_AUX_SERVERS=""
        shift
        ;;
    --for-cluster)
        BUILD_DEPLOY=""
        BUILD_ONLY="ingest server run task-base"
        BUILD_FRONTEND=""
        BUILD_AUX_SERVERS=""
        shift
        ;;
    --frontend)
        DEPLOY_ONLY=1
        BUILD_DEPLOY=""
        BUILD_DEV=""
        BUILD_TASK=""
        BUILD_ONLY=""
        BUILD_AUX_SERVERS=""
        shift
        ;;
    --help)
        usage
        exit 0
        shift
        ;;
    *)
        usage "Unknown parameter passed: $1"
        exit 1
        ;;
    esac done

if [ "${BASH_SOURCE[0]}" = "${0}" ]; then
    # Build deployment image
    if [ "${BUILD_DEPLOY}" ]; then
        docker-compose \
            -f deployment/docker-compose.yml \
            build
    fi

    # Build project images
    if [ -z "${DEPLOY_ONLY}" ]; then
        docker-compose ${BUILD_SERVERS} ${BUILD_TASK} ${BUILD_DEV} ${BUILD_AUX_SERVERS} \
            build ${BUILD_ONLY};
    fi

    if [ "${BUILD_FRONTEND}" ]; then
        docker-compose run --rm --no-deps \
            frontend \
            npm install --legacy-peer-deps
    fi

fi
