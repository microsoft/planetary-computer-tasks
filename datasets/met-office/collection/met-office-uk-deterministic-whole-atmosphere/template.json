      "type": "application/netcdf",
      "title": "CAPE most unstable below 500hPa",
      "roles": [
        "data"
      ],
      "forecast:variable": "atmosphere_convective_available_potential_energy",
      "cube:dimensions": {
        "latitude": {
          "type": "spatial",
