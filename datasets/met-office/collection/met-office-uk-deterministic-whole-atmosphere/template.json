            "type": "application/netcdf",
            "roles": [
                "data"
            ],
            "title": "Hourly lightning flash accumulation",
            "forecast:variable": "number_of_lightning_flashes_per_unit_area"
        },
        "height_AGL_at_wet_bulb_freezing_level": {
            "type": "application/netcdf",
            "roles": [
                "data"
            ],
            "title": "Height AGL at wet bulb freezing level",
            "forecast:variable": "wet_bulb_freezing_level_height"
        },
        "height_AGL_at_cloud_base_where_cloud_cover_2p5_oktas": {
            "type": "application/netcdf",
            "roles": [
                "data"
            ],
            "title": "Height AGL at cloud base where cloud cover 2p5 oktas",
            "forecast:variable": "cloud_base_height_2p5_oktas"
        }
    },
    "msft:region": "westeurope",
    "msft:group_id": "met-office-uk-deterministic",
    "cube:variables": {
        "cloud_area_fraction": {
            "type": "data",
            "unit": "1",
            "dimensions": [
                "latitude",
                "longitude",
                "forecast:reference_datetime",
                "forecast:horizon"
            ],
            "description": "Fraction of horizontal grid square occupied by cloud as diagnosed by the model cloud scheme. This is for the whole atmosphere column as seen from the surface or the top of the atmosphere."
        },
        "freezing_level_height": {
            "type": "data",
            "unit": "m",
            "dimensions": [
                "latitude",
                "longitude",
                "forecast:reference_datetime",
                "forecast:horizon"
            ],
            "description": "Height of the 0 degrees celsius isotherm (freezing level) above the surface (ground)."
        },
        "cloud_base_height_2p5_oktas": {
            "type": "data",
            "unit": "m",
            "dimensions": [
                "latitude",
                "longitude",
                "forecast:reference_datetime",
                "forecast:horizon"
            ],
            "description": "Height of the base of the lowest cloud above the surface (ground) where there is at least 2.5 oktas (eighths) of cloud cover. This corresponds to scattered cloud."
        },
        "low_type_cloud_area_fraction": {
            "type": "data",
            "unit": "1",
            "dimensions": [
                "latitude",
                "longitude",
                "forecast:reference_datetime",
                "forecast:horizon"
            ],
            "description": "Fraction of horizontal grid square occupied by cloud in the low-level cloud height range (from the lowest model layer containing the 111m height level up to but excluding the lowest model layer containing 1949m height level)."
        },
        "high_type_cloud_area_fraction": {
            "type": "data",
            "unit": "1",
            "dimensions": [
                "latitude",
                "longitude",
                "forecast:reference_datetime",
                "forecast:horizon"
            ],
            "description": "Fraction of horizontal grid square occupied by cloud in the high-level cloud height range (from the lowest model layer containing the 5574m height level up to but excluding the lowest model layer containing 13608m height level)."
        },
        "wet_bulb_freezing_level_height": {
            "type": "data",
            "unit": "m",
            "dimensions": [
                "latitude",
                "longitude",
                "forecast:reference_datetime",
                "forecast:horizon"
            ],
            "description": "Height of the wet bulb freezing level (i.e. where the wet bulb temperature is 0oC) above sea level. This is also referred to as the altitude of the wet bulb freezing level or (geometric) height above the geoid, which is the reference geopotential surface. Wet bulb temperature is defined as the temperature of a parcel of air cooled to saturation (100% relative humidity) by the evaporation of water into it with the latent heat supplied by the parcel."
        },
        "medium_type_cloud_area_fraction": {
            "type": "data",
            "unit": "1",
            "dimensions": [
                "latitude",
                "longitude",
                "forecast:reference_datetime",
                "forecast:horizon"
            ],
            "description": "Fraction of horizontal grid square occupied by cloud in the mid-level cloud height range (from the lowest model layer containing the 1949m height level up to but excluding the lowest model layer containing 5574m height level)."
        },
        "number_of_lightning_flashes_per_unit_area": {
            "type": "data",
            "unit": "count/m2",
            "dimensions": [
                "latitude",
                "longitude",
                "forecast:reference_datetime",
                "forecast:horizon"
            ],
            "description": "This represents the total (cloud-to-cloud and cloud-to-ground) lightning flashes per square metre within the previous hour"
        },
        "atmosphere_convective_available_potential_energy": {
            "type": "data",
            "unit": "J/kg",
            "dimensions": [
                "latitude",
                "longitude",
                "forecast:reference_datetime",
                "forecast:horizon"
            ],
            "description": "CAPE (Convective Available Potential Energy) calculated for the most unstable parcel where the most unstable parcel is defined as the parcel with the highest fixed level CAPE launched from any level (including screen-level=1.5m) within 500hPa of the surface pressure."
        },
        "atmosphere_convective_available_potential_energy_wrt_surface": {
            "type": "data",
            "unit": "J/kg",
            "dimensions": [
                "latitude",
                "longitude",
                "forecast:reference_datetime",
                "forecast:horizon"
            ],
            "description": "Value of CAPE (Convective Available Potential Energy) calculated for a surface based parcel where a surface based parcel is defined as a parcel initiated with thermodynamic properties at screen level height (1.5m) i.e. the parcel is launched from screen level."
        },
        "cloud_area_fraction_assuming_only_consider_surface_to_1000_feet_asl": {
            "type": "data",
            "unit": "1",
            "dimensions": [
                "latitude",
                "longitude",
                "forecast:reference_datetime",
                "forecast:horizon"
            ],
            "description": "Fraction of horizontal grid square occupied by cloud below 1000 feet above sea level."
        }
    },
